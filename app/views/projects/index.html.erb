
<h1> List of Projects </h1>

<table cellpadding="5">
	<tr>
		<th> Projects </th>
	</tr>
	<% if @projects.present? %>
		<% @projects.each do |project| %>

				<tr>
					<td> <%= project.title %> </td> 
			    	<td><%= link_to 'Show Details', project_path(project) %></td> 
					<td><%= link_to 'Edit', edit_project_path(project) if policy(project).edit? %></td>
        			<td><%= link_to 'Destroy', project, data: {confirm: 'Are you sure?'},												:method => :delete %></td>				
				</tr>			
		<% end %>
	<% end %>

</table>

<%= link_to 'Add new project', new_project_path %>

